<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <title>DOCADVISOR</title>
  </head>
  <body>
    <!-- As a link -->
    <nav class="navbar navbar-dark bg-dark mb-3">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Navbar</a>
        <a
              href="/addnew"
              class="btn btn-secondary"
            >
              Add New
      </a>
      </div>

      
    </nav>

    <!-- Card -->
    <div class="row d-flex align-items-center justify-content-center">
      <% data.forEach(function(doc){%>

      <div class="col-md-3 ms-4 mb-3">
        <div class="card">
          <div class="card-header"><%= doc.name%></div>
          <div class="card-body">
            <img src="/images/<%= doc.pic%>" class="card-img-top" style="height: 250px;" alt="...">
            <h5 class="card-title"><%=doc.email%></h5>
            
            <p class="card-text">
                <%=doc.qual%>
                <%=doc.city%>

            </p>
            <button type="button" class="btn btn-secondary">Delete</button>

            <!-- Button trigger modal -->
            <a
            href="/update/<%=doc.email %>"
              
              class="btn btn-secondary"
             
            >
              Update
        </a>
          </div>
        </div>
      </div>
      <% });%>
    </div>



   

  </body>
</html>
